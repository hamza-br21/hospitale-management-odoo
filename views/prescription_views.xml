<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Search View -->
    <record id="view_hospital_prescription_search" model="ir.ui.view">
        <field name="name">hospital.prescription.search</field>
        <field name="model">hospital.prescription</field>
        <field name="arch" type="xml">
            <search string="Prescriptions">
                <field name="reference"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_hospital_prescription_tree" model="ir.ui.view">
        <field name="name">hospital.prescription.tree</field>
        <field name="model">hospital.prescription</field>
        <field name="arch" type="xml">
            <tree string="Prescriptions" sample="1">
                <field name="reference"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="prescription_date"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'done'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_prescription_form" model="ir.ui.view">
        <field name="name">hospital.prescription.form</field>
        <field name="model">hospital.prescription</field>
        <field name="arch" type="xml">
            <form string="Prescription">
                <header>
                    <button name="action_send_email" string="Send by Email" type="object" class="oe_highlight" data-hotkey="e"/>
                    <button name="action_done" string="Mark as Done" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state not in ('draft', 'done')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="doctor_id"/>
                        </group>
                        <group>
                            <field name="prescription_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Medicines">
                            <field name="prescription_line_ids">
                                <tree editable="bottom">
                                    <field name="medicine_id"/>
                                    <field name="name" string="Custom Name" optional="hide"/>
                                    <field name="dosage_id"/>
                                    <field name="frequency_id"/>
                                    <field name="quantity"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Note">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_hospital_prescription_kanban" model="ir.ui.view">
        <field name="name">hospital.prescription.kanban</field>
        <field name="model">hospital.prescription</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="reference"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="prescription_date"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <strong><field name="reference"/></strong>
                                <span class="float-end"><field name="state" widget="badge"/></span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div><i class="fa fa-user"/> <field name="patient_id"/></div>
                                <div><i class="fa fa-user-md"/> <field name="doctor_id"/></div>
                                <div><i class="fa fa-calendar"/> <field name="prescription_date"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_prescription" model="ir.actions.act_window">
        <field name="name">Prescriptions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.prescription</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new prescription.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_prescription"
              name="Prescriptions"
              parent="menu_gestion_hospitaliere_root"
              action="action_hospital_prescription"
              sequence="70"/>

</odoo>

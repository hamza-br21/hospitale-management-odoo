<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_hospital_room_tree" model="ir.ui.view">
        <field name="name">hospital.room.tree</field>
        <field name="model">hospital.room</field>
        <field name="arch" type="xml">
            <tree string="Rooms">
                <field name="name"/>
                <field name="room_type"/>
                <field name="department_id"/>
                <field name="floor"/>
                <field name="capacity"/>
                <field name="occupied_beds"/>
                <field name="available_beds"/>
                <field name="daily_rate"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_room_form" model="ir.ui.view">
        <field name="name">hospital.room.form</field>
        <field name="model">hospital.room</field>
        <field name="arch" type="xml">
            <form string="Room">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Room Number"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="room_type"/>
                            <field name="department_id"/>
                            <field name="floor"/>
                        </group>
                        <group>
                            <field name="daily_rate"/>
                            <field name="capacity"/>
                            <field name="occupied_beds"/>
                            <field name="available_beds"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Beds" name="beds">
                            <field name="bed_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="bed_type"/>
                                    <field name="state"/>
                                    <field name="current_patient_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_hospital_room_kanban" model="ir.ui.view">
        <field name="name">hospital.room.kanban</field>
        <field name="model">hospital.room</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="room_type"/>
                <field name="capacity"/>
                <field name="available_beds"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <strong><field name="name"/></strong>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="room_type"/>
                                <div>
                                    <i class="fa fa-bed"/> <field name="available_beds"/>/<field name="capacity"/> available
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_room" model="ir.actions.act_window">
        <field name="name">Rooms</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.room</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first room!
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_room"
              name="Rooms"
              parent="menu_gestion_hospitaliere_root"
              action="action_hospital_room"
              sequence="35"/>

</odoo>

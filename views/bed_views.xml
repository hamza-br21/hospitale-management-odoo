<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Search View -->
    <record id="view_hospital_bed_search" model="ir.ui.view">
        <field name="name">hospital.bed.search</field>
        <field name="model">hospital.bed</field>
        <field name="arch" type="xml">
            <search string="Beds">
                <field name="name"/>
                <field name="bed_type"/>
                <filter string="Free" name="free" domain="[('state', '=', 'free')]"/>
                <filter string="Occupied" name="occupied" domain="[('state', '=', 'occupied')]"/>
                <group expand="1" string="Group By">
                    <filter string="Bed Type" name="group_by_type" context="{'group_by':'bed_type'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_hospital_bed_tree" model="ir.ui.view">
        <field name="name">hospital.bed.tree</field>
        <field name="model">hospital.bed</field>
        <field name="arch" type="xml">
            <tree string="Beds" sample="1">
                <field name="name"/>
                <field name="bed_type"/>
                <field name="state" widget="badge" decoration-success="state == 'free'" decoration-danger="state == 'occupied'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_bed_form" model="ir.ui.view">
        <field name="name">hospital.bed.form</field>
        <field name="model">hospital.bed</field>
        <field name="arch" type="xml">
            <form string="Bed">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Bed Number/Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="bed_type"/>
                    </group>
                </sheet>
                 <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_bed" model="ir.actions.act_window">
        <field name="name">Beds</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.bed</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage hospital beds here.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_bed"
              name="Beds"
              parent="menu_gestion_hospitaliere_root"
              action="action_hospital_bed"
              sequence="50"/>

</odoo>

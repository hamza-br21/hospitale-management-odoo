<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_hospital_insurance_provider_tree" model="ir.ui.view">
        <field name="name">hospital.insurance.provider.tree</field>
        <field name="model">hospital.insurance.provider</field>
        <field name="arch" type="xml">
            <tree string="Insurance Providers">
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_insurance_provider_form" model="ir.ui.view">
        <field name="name">hospital.insurance.provider.form</field>
        <field name="model">hospital.insurance.provider</field>
        <field name="arch" type="xml">
            <form string="Insurance Provider">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Provider Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_insurance_provider" model="ir.actions.act_window">
        <field name="name">Insurance Providers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.insurance.provider</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first insurance provider!
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_insurance_provider"
              name="Providers"
              parent="menu_insurance"
              action="action_hospital_insurance_provider"
              sequence="10"/>

</odoo>

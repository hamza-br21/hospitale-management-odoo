<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Search View -->
    <record id="view_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hospital.doctor.search</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <search string="Doctors">
                <field name="name" filter_domain="['|', ('name', 'ilike', self), ('specialization', 'ilike', self)]"/>
                <field name="specialization"/>
                <separator/>
                <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                <filter string="Female" name="female" domain="[('gender', '=', 'female')]"/>
                <group expand="1" string="Group By">
                    <filter string="Specialization" name="group_by_specialization" context="{'group_by':'specialization'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree string="Doctors" sample="1">
                <field name="name"/>
                <field name="gender"/>
                <field name="specialization"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_appointments" type="object" class="oe_stat_button" icon="fa-calendar">
                            <field name="appointment_count" widget="statinfo" string="Appointments"/>
                        </button>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Doctor Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="gender"/>
                            <field name="specialization"/>
                            <field name="department_id"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="signature" widget="signature"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first doctor!
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_doctor"
              name="Doctors"
              parent="menu_gestion_hospitaliere_root"
              action="action_hospital_doctor"
              sequence="20"/>

</odoo>

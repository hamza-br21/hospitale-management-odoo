<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Search View -->
    <record id="view_hospital_bill_search" model="ir.ui.view">
        <field name="name">hospital.bill.search</field>
        <field name="model">hospital.bill</field>
        <field name="arch" type="xml">
            <search string="Bills">
                <field name="reference"/>
                <field name="patient_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_hospital_bill_tree" model="ir.ui.view">
        <field name="name">hospital.bill.tree</field>
        <field name="model">hospital.bill</field>
        <field name="arch" type="xml">
            <tree string="Bills" sample="1">
                <field name="reference"/>
                <field name="patient_id"/>
                <field name="date_bill"/>
                <field name="amount"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'paid'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_bill_form" model="ir.ui.view">
        <field name="name">hospital.bill.form</field>
        <field name="model">hospital.bill</field>
        <field name="arch" type="xml">
            <form string="Bill">
                <header>
                    <button name="action_paid" string="Mark as Paid" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state not in ('draft', 'paid')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,paid"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="admission_id"/>
                            <field name="appointment_id"/>
                            <field name="date_bill"/>
                            <field name="due_date"/>
                        </group>
                        <group>
                            <field name="insurance_id"/>
                            <field name="payment_method"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Bill Lines" name="bill_lines">
                            <field name="bill_line_ids">
                                <tree editable="bottom">
                                    <field name="product_type"/>
                                    <field name="medicine_id" optional="hide"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="subtotal"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="subtotal" widget="monetary"/>
                                <field name="tax_amount" widget="monetary"/>
                                <div class="oe_subtotal_footer_separator oe_inline">
                                    <label for="total_amount" string="Total"/>
                                    <field name="total_amount" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"/>
                                </div>
                                <field name="insurance_coverage" widget="monetary" invisible="not insurance_id"/>
                                <div class="oe_subtotal_footer_separator oe_inline" invisible="not insurance_id">
                                    <label for="patient_payable" string="Patient Payable"/>
                                    <field name="patient_payable" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"/>
                                </div>
                            </group>
                        </page>
                        <page string="Other Info" name="other">
                            <group>
                                <field name="note" placeholder="Additional notes..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_hospital_bill_kanban" model="ir.ui.view">
        <field name="name">hospital.bill.kanban</field>
        <field name="model">hospital.bill</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="reference"/>
                <field name="patient_id"/>
                <field name="total_amount"/>
                <field name="date_bill"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <strong><field name="reference"/></strong>
                                <span class="float-end"><field name="state" widget="badge"/></span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div><i class="fa fa-user"/> <field name="patient_id"/></div>
                                <div><i class="fa fa-money"/> <field name="total_amount" widget="monetary"/></div>
                                <div><i class="fa fa-calendar"/> <field name="date_bill"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_bill" model="ir.actions.act_window">
        <field name="name">Bills</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.bill</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new bill.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_bill"
              name="Billing"
              parent="menu_gestion_hospitaliere_root"
              action="action_hospital_bill"
              sequence="80"/>

</odoo>

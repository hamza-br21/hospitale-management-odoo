<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Search View -->
    <record id="view_hospital_admission_search" model="ir.ui.view">
        <field name="name">hospital.admission.search</field>
        <field name="model">hospital.admission</field>
        <field name="arch" type="xml">
            <search string="Admissions">
                <field name="reference"/>
                <field name="patient_id"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Discharged" name="discharged" domain="[('state', '=', 'discharged')]"/>
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_hospital_admission_tree" model="ir.ui.view">
        <field name="name">hospital.admission.tree</field>
        <field name="model">hospital.admission</field>
        <field name="arch" type="xml">
            <tree string="Admissions" sample="1" default_order="date_admission desc" decoration-info="state == 'draft'" decoration-success="state == 'discharged'" decoration-danger="state == 'active'">
                <field name="reference"/>
                <field name="patient_id"/>
                <field name="bed_id"/>
                <field name="date_admission"/>
                <field name="discharge_date"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'discharged'" decoration-danger="state == 'active'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_admission_form" model="ir.ui.view">
        <field name="name">hospital.admission.form</field>
        <field name="model">hospital.admission</field>
        <field name="arch" type="xml">
            <form string="Admission">
                <header>
                    <button name="action_admit" string="Admit" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_discharge" string="Discharge" type="object" class="oe_highlight" invisible="state != 'active'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state not in ('draft', 'active')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,discharged"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="doctor_id"/>
                            <field name="bed_id" readonly="state != 'draft'"/>
                            <field name="admission_type"/>
                        </group>
                        <group>
                            <field name="date_admission" readonly="state != 'draft'"/>
                            <field name="discharge_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Medical Info" name="medical">
                            <group>
                                <field name="diagnosis" placeholder="Diagnosis..."/>
                                <field name="discharge_summary" placeholder="Discharge summary..." invisible="state not in ('discharged', 'cancel')"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_hospital_admission_kanban" model="ir.ui.view">
        <field name="name">hospital.admission.kanban</field>
        <field name="model">hospital.admission</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="reference"/>
                <field name="patient_id"/>
                <field name="bed_id"/>
                <field name="date_admission"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <strong><field name="reference"/></strong>
                                <span class="float-end"><field name="state" widget="badge"/></span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div><i class="fa fa-user"/> <field name="patient_id"/></div>
                                <div><i class="fa fa-bed"/> <field name="bed_id"/></div>
                                <div><i class="fa fa-calendar"/> <field name="date_admission"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_admission" model="ir.actions.act_window">
        <field name="name">Admissions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.admission</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage patient admissions here.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_admission"
              name="Admissions"
              parent="menu_gestion_hospitaliere_root"
              action="action_hospital_admission"
              sequence="60"/>

</odoo>

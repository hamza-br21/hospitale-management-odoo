<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_hospital_insurance_tree" model="ir.ui.view">
        <field name="name">hospital.insurance.tree</field>
        <field name="model">hospital.insurance</field>
        <field name="arch" type="xml">
            <tree string="Insurance Policies">
                <field name="policy_number"/>
                <field name="patient_id"/>
                <field name="provider_id"/>
                <field name="coverage_percentage"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="is_active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_insurance_form" model="ir.ui.view">
        <field name="name">hospital.insurance.form</field>
        <field name="model">hospital.insurance</field>
        <field name="arch" type="xml">
            <form string="Insurance Policy">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="policy_number" placeholder="Policy Number"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="provider_id"/>
                            <field name="coverage_percentage"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="is_active"/>
                            <field name="max_coverage_amount"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_insurance" model="ir.actions.act_window">
        <field name="name">Insurance Policies</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.insurance</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first insurance policy!
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_insurance"
              name="Insurance"
              parent="menu_gestion_hospitaliere_root"
              action="action_hospital_insurance"
              sequence="70"/>

</odoo>

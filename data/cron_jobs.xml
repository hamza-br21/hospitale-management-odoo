<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Cron Job: Send Appointment Reminders Daily -->
        <record id="ir_cron_send_appointment_reminders" model="ir.cron">
            <field name="name">Hospital: Send Appointment Reminders</field>
            <field name="model_id" ref="model_hospital_notification"/>
            <field name="state">code</field>
            <field name="code">model.send_appointment_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>

        <!-- Cron Job: Send Bill Payment Reminders Daily -->
        <record id="ir_cron_send_bill_reminders" model="ir.cron">
            <field name="name">Hospital: Send Bill Payment Reminders</field>
            <field name="model_id" ref="model_hospital_notification"/>
            <field name="state">code</field>
            <field name="code">model.send_bill_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>

    </data>
</odoo>
